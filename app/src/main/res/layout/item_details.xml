<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/details_card"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    <TextView
        android:id="@+id/item_details_date"
        style="@style/totalItemTextView"
        android:layout_weight="3" />
    <TextView
        android:id="@+id/item_details_change"
        style="@style/totalItemTextView"
        android:layout_weight="5" />
    <ImageButton
        android:id="@+id/item_details_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:src="@drawable/ic_twotone_delete_24"
        android:contentDescription="@string/delete_button" />
    </LinearLayout>

</androidx.cardview.widget.CardView>